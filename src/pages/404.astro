---
import Layout from '../layouts/Layout.astro'



---

<Layout title="404 Error" description='No Page Found'>
    <div class="w-100 f-col f-align-center">
        <h1>Error 404</h1>
        <h2>Page Not Found</h2>
        <p class="btn-black br-max d-flex mt-5 fw-800 pointer" onclick="history.back()">Get Back</p>
    </div>
</Layout>

<style is:raw>

    h1{
        font-size: 36px;
        margin-top: 40px;
    }
    h2{
        font-size: 24px;
        font-weight: 700;
    }
    p{
        padding: 12px 24px;
        width: max-content;
        background-color: var(--f-tittle);
        color: var(--f-bg);
    }
</style>
